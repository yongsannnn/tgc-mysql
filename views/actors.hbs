{{#extends 'base'}}

{{#block 'content'}}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        {{#each actors}}
            <tr>
                <td>{{this.actor_id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td> <a href="/actors/{{this.actor_id}}/update" class="btn btn-primary">Edit</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}